{
  "title": "Bedriftsregistrering - BIM Verdi",
  "description": "Registrer din bedrift som medlem i BIM Verdi",
  "labelPlacement": "top_label",
  "descriptionPlacement": "below",
  "button": {
    "type": "text",
    "text": "Send inn registrering"
  },
  "fields": [
    {
      "type": "section",
      "label": "Bedriftsinformasjon",
      "description": "Grunnleggende informasjon om bedriften"
    },
    {
      "type": "text",
      "id": 1,
      "label": "Organisasjonsnummer",
      "isRequired": true,
      "placeholder": "9 siffer",
      "maxLength": 9,
      "description": "Bedriftens norske organisasjonsnummer"
    },
    {
      "type": "text",
      "id": 2,
      "label": "Bedriftsnavn",
      "isRequired": true,
      "placeholder": "Bedriftens offisielle navn"
    },
    {
      "type": "textarea",
      "id": 3,
      "label": "Bedriftsbeskrivelse",
      "isRequired": false,
      "placeholder": "Kort beskrivelse av bedriften og hva dere gjør"
    },
    {
      "type": "fileupload",
      "id": 4,
      "label": "Logo",
      "isRequired": false,
      "allowedExtensions": "jpg,jpeg,png,gif,svg",
      "maxFileSize": 2,
      "description": "Last opp bedriftens logo (maks 2MB)"
    },
    {
      "type": "text",
      "id": 5,
      "label": "Gateadresse",
      "isRequired": true,
      "placeholder": "Gatenavn og nummer"
    },
    {
      "type": "text",
      "id": 6,
      "label": "Postnummer",
      "isRequired": true,
      "placeholder": "4 siffer",
      "maxLength": 4
    },
    {
      "type": "text",
      "id": 7,
      "label": "Poststed",
      "isRequired": true,
      "placeholder": "By/sted"
    },
    {
      "type": "text",
      "id": 8,
      "label": "Nettside",
      "isRequired": false,
      "placeholder": "https://www.eksempel.no"
    },
    {
      "type": "select",
      "id": 20,
      "label": "Bransjekategori",
      "isRequired": true,
      "choices": [
        {"text": "Arkitekt", "value": "arkitekt"},
        {"text": "Rådgiver", "value": "radgiver"},
        {"text": "Entreprenør", "value": "entrepronor"},
        {"text": "Leverandør", "value": "leverandor"},
        {"text": "Eiendomsforvalter", "value": "eiendomsforvalter"},
        {"text": "Annet", "value": "annet"}
      ]
    },
    {
      "type": "checkbox",
      "id": 21,
      "label": "Kundetype (velg alle som passer)",
      "isRequired": true,
      "choices": [
        {"text": "Offentlig sektor", "value": "offentlig"},
        {"text": "Privat sektor", "value": "privat"},
        {"text": "Boligbygg", "value": "boligbygg"},
        {"text": "Næringsbygg", "value": "naeringsbygg"}
      ]
    },
    {
      "type": "section",
      "label": "Kontaktperson",
      "description": "Hovedkontaktperson for medlemskapet"
    },
    {
      "type": "text",
      "id": 10,
      "label": "Fornavn",
      "isRequired": true
    },
    {
      "type": "text",
      "id": 11,
      "label": "Etternavn",
      "isRequired": true
    },
    {
      "type": "email",
      "id": 12,
      "label": "E-postadresse",
      "isRequired": true,
      "placeholder": "navn@bedrift.no",
      "description": "Brukes som brukernavn for innlogging"
    },
    {
      "type": "phone",
      "id": 13,
      "label": "Telefon",
      "isRequired": true,
      "placeholder": "+47 123 45 678"
    },
    {
      "type": "text",
      "id": 14,
      "label": "Stillingstittel",
      "isRequired": false,
      "placeholder": "Daglig leder, BIM-koordinator, etc."
    },
    {
      "type": "section",
      "label": "Brukerkonto",
      "description": "Opprett innloggingsdetaljer"
    },
    {
      "type": "password",
      "id": 15,
      "label": "Passord",
      "isRequired": true,
      "minPasswordStrength": "medium",
      "description": "Minimum 8 tegn, inkludert tall og bokstaver"
    },
    {
      "type": "password",
      "id": 16,
      "label": "Bekreft passord",
      "isRequired": true
    },
    {
      "type": "section",
      "label": "Samtykke og vilkår"
    },
    {
      "type": "consent",
      "id": 17,
      "label": "Personvern",
      "isRequired": true,
      "checkboxLabel": "Jeg godtar at mine opplysninger behandles i henhold til personvernerklæringen",
      "description": "Les vår <a href='/personvern' target='_blank'>personvernerklæring</a>"
    },
    {
      "type": "consent",
      "id": 18,
      "label": "Medlemsvilkår",
      "isRequired": true,
      "checkboxLabel": "Jeg godtar BIM Verdis medlemsvilkår",
      "description": "Les <a href='/medlemsvilkar' target='_blank'>medlemsvilkårene</a>"
    },
    {
      "type": "checkbox",
      "id": 19,
      "label": "Nyhetsbrev",
      "isRequired": false,
      "choices": [
        {"text": "Ja, jeg ønsker å motta nyhetsbrev fra BIM Verdi", "value": "yes"}
      ]
    }
  ],
  "confirmations": [
    {
      "id": "default",
      "name": "Default Confirmation",
      "type": "message",
      "message": "Takk for registreringen! Du vil motta en e-post når søknaden er godkjent."
    }
  ],
  "notifications": [
    {
      "id": "user_notification",
      "name": "Bekreftelse til bruker",
      "toType": "field",
      "to": "{Email:12}",
      "subject": "Velkommen til BIM Verdi",
      "message": "Hei {Fornavn:10},\n\nTakk for at du registrerte {Bedriftsnavn:2}.\n\nDin søknad venter på godkjenning.\n\nMed vennlig hilsen,\nBIM Verdi"
    },
    {
      "id": "admin_notification",
      "name": "Varsling til admin",
      "toType": "email",
      "to": "admin@bimverdi.no",
      "subject": "Ny medlemsregistrering: {Bedriftsnavn:2}",
      "message": "Ny bedrift registrert:\n\nBedrift: {Bedriftsnavn:2}\nOrg.nr: {Organisasjonsnummer:1}\nKontakt: {Fornavn:10} {Etternavn:11}\nE-post: {Email:12}\n\nGå til admin for å godkjenne."
    }
  ]
}
